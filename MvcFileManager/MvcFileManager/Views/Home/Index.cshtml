@{
    ViewBag.Title = "HOME";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Head{
    @Styles.Render("~/Content/themes/base/css")
    @Styles.Render("~/Content/table.css")    
}

@section Scripts{
    <script type="text/javascript">  
        $(function () {  
            $("#tabs").tabs();
        });  
    </script>  
}

@using MvcFileManager.ViewModels
@model FileListViewModel
<body>
    <div id="tabs" style="min-height:450px">
        <ul>
        <li><a href="#tabs-1">File Manager List</a></li>
        <li><a href="#tabs-2">User Manager List</a></li>
        </ul>
        <div id="tabs-1">
            <div>
                <button style="margin-left:10px"><a class="ui-button ui-button-text" href="/Home/Upload">Upload</a></button>
            </div>
            <table class="sample">
            <tr>
                <th>File Name</th>
                <th>Creater</th>
                <th>Upload Time</th>
                <th>Version</th>
                <th>operation</th>
            </tr>

            @foreach (FileViewModel file in Model.FileList)
            { 
                <tr>
                    <td>@file.FileName</td>
                    <td>@file.Creater</td>
                    <td>@file.UploadTime</td>
                    <td>@file.Version</td>

                    <td>
                        @Html.ActionLink("History", "History", new { id = file.FileId } ) |
                        @Html.ActionLink("Edit", "Edit", new { id = file.FileId } ) |
                        @Html.ActionLink("Details", "Details", new { id = file.FileId } ) |
                        @Html.ActionLink("Delete", "Delete", new { id = file.FileId } )
                    </td>
                </tr>
            }
        </table>
        </div>

        <div id="tabs-2">
            <p></p>
        </div>
    </div>
</body>